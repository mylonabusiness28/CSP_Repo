DATA = {0..5}
SIZE = 3

channel in, out : DATA


BUFFER(i) = B(<>,i)

B(s,i) = if (s == <>)
         then in?x -> B(<x>,i)
         else if (#s == i) 
              then out!head(s) -> B(tail(s),i)
              else ((out!head(s) -> B(tail(s),i)) [] in?x -> B(s^<x>,i))
                   |~| out!head(s) -> B(tail(s),i)


